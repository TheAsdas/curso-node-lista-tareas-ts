{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "shell",
			"label": "ts-cleaner: watch",
			"command": "npx ts-cleaner -w",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}